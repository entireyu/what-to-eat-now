/* pages/editMenu/editMenu.wxss */
/* 菜单项 */
.menu .item{
  display: inline-block;
  margin-right: 1rem;
  padding: .25rem .5rem;
  background-color: #e3f2fd;
  border: 1px solid #42a5f5;
  letter-spacing: .1rem;
  text-indent: .1rem;
  margin-bottom: 1rem;
  font-weight: 700;
  color: #42a5f5;
  font-size: smaller;
}
/* 用户输入框 */
.userinput{
  padding: .5rem 1rem;
  border: 1px solid #eee;
}
.userinput textarea{
  margin: 0 auto;
  width: 100%;
}
.btnGroup button[type='primary']{
  background-color: #42a5f5;
}
.btnGroup button[type='default']{
  color: #1d1d1f!important;
}
.name{
  padding: .5rem 1rem;
  border: 1px solid #eee;
}
